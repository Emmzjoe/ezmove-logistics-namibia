# Environment
NODE_ENV=development
PORT=3000

# Database (DigitalOcean PostgreSQL)
DB_HOST=your-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=defaultdb
DB_USER=doadmin
DB_PASSWORD=your-password

# Redis (DigitalOcean Redis) - Optional
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=your-redis-password

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=generate-random-string-here
JWT_REFRESH_SECRET=generate-random-string-here

# Email (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@ezmove.na
FROM_NAME=EZMove

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# CORS
CORS_ORIGINS=http://localhost:8001,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
