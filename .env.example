# EZMove Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in your values

# API Configuration
API_URL=http://localhost:3001/api
SOCKET_URL=http://localhost:3001

# Google Maps
# Get your API key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=YOUR_API_KEY_HERE

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_PWA=false

# Pricing Configuration (NAD)
BASE_PRICE=50
PRICE_PER_KM=8
PRICE_PER_MIN=2
PLATFORM_COMMISSION=0.20

# Vehicle Type Multipliers
MULTIPLIER_BAKKIE=1.0
MULTIPLIER_PICKUP=1.0
MULTIPLIER_VAN=1.3
MULTIPLIER_TRUCK=1.8
MULTIPLIER_FLATBED=2.0

# Google Analytics
# Get your measurement ID from: https://analytics.google.com/
GA_MEASUREMENT_ID=

# Application
APP_NAME=EZMove
APP_VERSION=1.0.0
NODE_ENV=development
