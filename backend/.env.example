# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:8001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ezmove_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=your_very_long_random_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment - MTN MoMoPay
MTN_ENVIRONMENT=sandbox
MTN_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_API_KEY=your_mtn_api_key
MTN_API_SECRET=your_mtn_api_secret
MTN_SUBSCRIPTION_KEY=your_subscription_key

# SMS - Twilio (or use Africa's Talking)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+264XXXXXXXXX

# Email - SendGrid
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@ezmove.com

# Maps - Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_key

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
